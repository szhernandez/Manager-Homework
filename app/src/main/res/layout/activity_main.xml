<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView2"
        android:textSize="18dp"

        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="En esta pantalla se mostraran en un ListView todas las materias registradas"
        android:textSize="18dp"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_alignBottom="@+id/btnmateria"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <com.getbase.floatingactionbutton.AddFloatingActionButton
        android:id="@+id/btnmateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="16dp"

        android:baselineAlignBottom="false"
        android:visibility="invisible"
        />



    <com.getbase.floatingactionbutton.AddFloatingActionButton
        android:id="@+id/btnregistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAlignBottom="false"
        fab:fab_colorNormal="@color/Accent"
        fab:fab_colorPressed="@color/Primary"
        android:onClick="nuevamateria"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/todomat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="aqui va todo"

        android:layout_below="@+id/btnmateria"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="consultamaterias"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnmateria"
        android:layout_alignStart="@+id/btnmateria"
        android:background="@color/Accent"
        android:text="Mostrar materias"
        />


</RelativeLayout>

